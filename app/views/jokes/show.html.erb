<% if @joke.format == "knock" %>
<div class="row">
  <div class="small-12 columns">
    <h1 id="knock-knock">Knock Knock</h1>
  </div>
</div>
  <div class="row">
    <div class="small-12 columns">
      <h2 class="subheader" id="whosthere">Who's there?</h2>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <h2 class="subheader"><%= @joke.title %></h2>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <h2 class="subheader"><%= @joke.title + " who?" %></h2>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <h2 class="subheader"><%= @joke.punchline %></h2>
    </div>
  </div>

<% elsif @joke.format == "oneliner" %>
  <div class="row">
    <div class="small-12 columns setup">
      <h1><%= @joke.title %></h1>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns punchline">
      <h2><%= @joke.punchline %></h2>
    </div>
  </div>
<% end %>

<div class="row">
    <div class="small-12 columns" id="show_buttons">
      <%= link_to "<button>Back to Jokes</button>".html_safe, jokes_path %>
      <%= link_to "<button>Delete Joke</button>".html_safe, @joke, :confirm => "Are you sure you want to delete this joke?", :method => :delete %>
    </div>
</div>